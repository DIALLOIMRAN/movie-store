@model CLIENTVIDEO.ServiceReferenceVideo.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Videos : Inscription";
}

<div class="content">
    <div class="register">
        @using (Html.BeginForm("SignIn", "Register"))
        {
            @Html.ValidationSummary(true)
            { 
                <div>
                    <div class="register-top-grid">
                        <h3>Personal Information</h3>
                            <div>
                                <span>First Name<label>*</label></span>
                                @Html.TextBoxFor(model => model.firstName, new { @id = "username", @class = "form-control", placeholder = "Username or email" })
                            </div>

                            <div>
                                <span>Last Name<label>*</label></span>
                                @Html.TextBoxFor(model => model.lastName, new { @id = "lastName", @class = "form-control", placeholder = "Last Name" })
                            </div>
        
                            <div>
                                <span>Email Address<label>*</label></span>
                                @Html.TextBoxFor(model => model.email, new { @id = "email", @class = "form-control", placeholder = "Email Address" })
                            </div>

                            <div class="clearfix"> </div>
                            <a class="news-letter" href="#">
                                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Sign Up for Newsletter</label>
                            </a>
                     </div>
            
                    <div class="register-bottom-grid">
                        <h3>Login Information</h3>
                        <div>
                            <span>Password<label>*</label></span>
                            @Html.PasswordFor(model => model.password, new { @id = "password", @class = "form-control", placeholder = "password" })
                        </div>
                        <div>
                            <span>Confirm Password<label>*</label></span>
                            <input type="text" name="passwordConfirm" placeholder="Confirm Password" class="form-control" />
                            
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                </div>
                <div class="clearfix"> </div>
                <div class="register-but">
                    <div>
                        <input type="submit" value="submit" id="submit">
                        <div class="clearfix"> </div>
                    </div>
                </div>

            }
        }
    </div>
</div>


